<div class="rentals">
    <label>
        <span>Dónde te gustaría quedarte?</span>
        <Input @value={{this.query}} class="light" />
    </label>

    <ul class="results">
    <Rentals::Filter @rentals={{@rentals}} @query={{this.query}} as |results|>
        {{#each results as |rental|}}
        <li>
            <Rental @rental={{rental}} />
        </li>
        {{/each}}
    </Rentals::Filter>
    </ul>
</div>